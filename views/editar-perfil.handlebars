<main class="contenedor">
  <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
    
    <div class="campo">
      <label>Nombre</label>
      <input type="text" name="nombre" placeholder="Tu nombre" value="{{usuario.nombre}}" checkBody>
    </div>

    <div class="campo">
      <label>E-mail</label>
      <input type="email" name="email" placeholder="Tu E-mail" value="{{usuario.email}}" checkBody>
    </div>

    <div class="campo">
      <label>Password</label>
      <input type="password" name="password" placeholder="Tu password">
    </div>

    <div class="campo">
      <label>Imagen</label>
      <input type="file" name="imagen" placeholder="Tu imagen de perfil">
      <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
    </div>

    <div class="campo">
      <input type="submit" value="Guardar cambios" class="btn btn-azul">
    </div>

  </form>
</main>